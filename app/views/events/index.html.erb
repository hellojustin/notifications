
<div id="eventsList">
  
  <% @user.events.each do |event| %>
  
    <div class='row'>

      <div class='span8 media event-card'>

        <%= link_to user_path( event.user ), :class => 'pull-left' do %>
          <%= image_tag gravatar_url( event.user, 40 ), 
                        :class => 'media-object img-rounded',
                        'data-src' => 'holder.js/64x64' %>
        <% end %>

        <div class='media-body'>

          <small class='pull-right'>
            <%= event.created_at.to_s :human_brief %>
          </small>

          <%= link_to user_event_path( event.user, event ) do %>
            <h3>
              <%= event.kind %>
            </h3>
          <% end %>

          <p class='muted'><%= event.user.name %></p>

          <p><%= event.summary %></p>

        </div>

      </div>

    </div>
  
  <% end %>

</div>
