<h1>Displaying users matching '<%= search_terms %>'</h1>

<ul id='usersList'>

  <% users.each do |user| %>
    
    <li>
      <%= user.email %> 
      <% if current_user.follows? user %>
        Following
      <% else %>
        <%= link_to 'Follow', 
            create_following_path( :followed_user_id => user.id ), 
            :method => :post %>
      <% end %>
    </li>

  <% end %>

</ul>
