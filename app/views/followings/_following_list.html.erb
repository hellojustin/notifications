<% user.pending_follows.each do |following| %>
  <% if following.requester? current_user %>
    <li class='row-fluid'>
      
      <%= render :partial => 'followings/following_row', 
                 :locals  => { :user         => following.followed_user, 
                               :following    => following,
                               :pending_text => 'pending',
                               :full_row     => full_row } %>

    </li>
  <% end %>
<% end %>

<% user.followed_users.each do |followed_user| %>
  <li class='row-fluid'>

    <%= render :partial => 'followings/following_row', 
               :locals  => { :user     => followed_user,
                             :full_row => full_row } %>
  
  </li>
<% end %>
